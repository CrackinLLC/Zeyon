{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "zeyon/imports": ["./src/_imports"],
      "zeyon/maps": ["./src/_maps"]
    },

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "lib": ["dom", "ES2020", "DOM.Iterable"],

    "alwaysStrict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,

    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "tests", "**/*_TEST.ts"]
}
